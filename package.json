{
  "name": "namsbokasafn-efni",
  "version": "1.0.0",
  "description": "Translation workflow and content for Icelandic OpenStax textbooks. Produces faithful translations, human-verified TM, and localized educational content.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "update-status": "node scripts/update-status.js",
    "validate": "node scripts/validate-status.js",
    "convert-md": "node tools/docx-to-md.js",
    "add-frontmatter": "node tools/add-frontmatter.js",
    "process-chapter": "node tools/process-chapter.js",
    "extract-math": "node tools/cnxml-math-extract.js",
    "replace-math": "node tools/replace-math-images.js",
    "cnxml-to-md": "node tools/cnxml-to-md.js",
    "md-to-xliff": "node tools/md-to-xliff.js",
    "xliff-to-tmx": "node tools/xliff-to-tmx.js",
    "apply-equations": "node tools/apply-equations.js",
    "pipeline": "node tools/pipeline-runner.js",
    "post-mt": "node tools/post-mt-pipeline.js",
    "openstax-fetch": "node tools/openstax-fetch.cjs",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:install": "cd server && npm install",
    "docs:generate": "node scripts/generate-tool-inventory.js && node scripts/generate-route-inventory.js && node scripts/update-readme-sections.js",
    "docs:check": "npm run docs:generate && git diff --exit-code docs/_generated/"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "mammoth": "^1.11.0",
    "turndown": "^7.2.2"
  },
  "validate-chapter": "node tools/validate-chapter.js",
  "_future-scripts": {
    "_note": "These scripts are planned but not yet implemented. See docs/workflow.md for manual process.",
    "strip-text": "node tools/strip-docx-to-txt.js",
    "export-parallel": "node tools/export-parallel-corpus.js"
  },
  "keywords": [
    "translation",
    "icelandic",
    "openstax",
    "chemistry",
    "biology",
    "education",
    "oer",
    "open-educational-resources",
    "translation-memory",
    "localization"
  ],
  "author": "SigurÃ°ur E. Vilhelmsson",
  "license": "SEE LICENSE FILE",
  "repository": {
    "type": "git",
    "url": "https://github.com/SigurdurVilhelmsson/namsbokasafn-efni"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://efnafraedi.app"
}
