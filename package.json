{
  "name": "namsbokasafn-efni",
  "version": "1.0.0",
  "description": "Translation workflow and content for Icelandic OpenStax textbooks. Produces faithful translations, human-verified TM, and localized educational content.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "update-status": "node scripts/update-status.js",
    "validate": "node scripts/validate-status.js",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:install": "cd server && npm install",
    "docs:generate": "node scripts/generate-tool-inventory.js && node scripts/generate-route-inventory.js && node scripts/update-readme-sections.js",
    "docs:check": "npm run docs:generate && git diff --exit-code docs/_generated/",
    "lint": "eslint tools/ scripts/",
    "lint:fix": "eslint tools/ scripts/ --fix",
    "format": "prettier --write 'tools/**/*.js' 'scripts/**/*.js'",
    "format:check": "prettier --check 'tools/**/*.js' 'scripts/**/*.js'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.15.0",
    "husky": "^9.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "tools/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "server/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "translation",
    "icelandic",
    "openstax",
    "chemistry",
    "biology",
    "education",
    "oer",
    "open-educational-resources",
    "translation-memory",
    "localization"
  ],
  "author": "SigurÃ°ur E. Vilhelmsson",
  "license": "SEE LICENSE FILE",
  "repository": {
    "type": "git",
    "url": "https://github.com/SigurdurVilhelmsson/namsbokasafn-efni"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://namsbokasafn.is",
  "overrides": {
    "mj-context-menu": {
      "rimraf": {
        "glob": {
          "minimatch": ">=10.2.1"
        }
      }
    }
  },
  "dependencies": {
    "@mathjax/src": "^4.1.0"
  }
}
