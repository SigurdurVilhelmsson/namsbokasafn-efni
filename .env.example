# Translation Pipeline API Server - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Server host (default: localhost)
HOST=localhost

# Base URL for links in emails (default: http://localhost:3000)
BASE_URL=https://ritstjorn.namsbokasafn.is

# =============================================================================
# CORS Configuration
# =============================================================================

# Additional allowed origins (comma-separated, optional)
# The following are always allowed: namsbokasafn.is, localhost:5173, localhost:4173, localhost:3000
CORS_ORIGIN=

# =============================================================================
# GitHub OAuth (required for authentication)
# =============================================================================

# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# JWT secret for session tokens (generate a secure random string)
JWT_SECRET=

# =============================================================================
# Email Notifications (optional but recommended for pilot)
# =============================================================================

# Admin email for receiving feedback notifications
ADMIN_EMAIL=

# SMTP server configuration
# Required for sending email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@namsbokasafn.is

# =============================================================================
# Matecat Integration (optional)
# =============================================================================

# Matecat API credentials
MATECAT_API_KEY=
MATECAT_API_URL=https://www.matecat.com/api/v2

# =============================================================================
# External Services (optional)
# =============================================================================

# OpenStax archive URL (default: built-in)
OPENSTAX_ARCHIVE_URL=https://openstax.org/apps/archive
